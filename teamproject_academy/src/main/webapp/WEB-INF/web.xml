<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name></display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>/WEB-INF/common/index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
        <servlet-name>dbcpInit</servlet-name>
        <servlet-class>util.DBCPInit</servlet-class>
        <init-param>
            <param-name>jdbcDriver</param-name>
            <param-value>com.mysql.jdbc.Driver</param-value>
        </init-param>
        <init-param>
            <param-name>jdbcUrl</param-name>
            <param-value>
            <!-- DB 연결 url 작성부분 -->
                jdbc:mysql://localhost:3306/board?characterEncoding=UTF-8&amp;useSSL=false
            </param-value>
        </init-param>
        <init-param>
        <!-- DB 연결 user 작성부분 -->
            <param-name>dbUser</param-name>
            <param-value>tester</param-value>
        </init-param>
        <init-param>
         <!-- DB 연결 password 작성부분 -->
            <param-name>dbPassword</param-name>
            <param-value>1234</param-value>
        </init-param>
        <init-param>
            <param-name>poolName</param-name>
            <param-value>board</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
  
  <servlet>
  	<servlet-name>common</servlet-name>
  	<servlet-class>front.FrontController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>common</servlet-name>
  	<url-pattern>/teamproject_academy/common/</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>index</servlet-name>
  	<jsp-file>/WEB-INF/common/index.jsp</jsp-file>
  </servlet>
  
  <servlet>
  	<servlet-name>student</servlet-name>
  	<servlet-class>front.FrontController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>student</servlet-name>
  	<url-pattern>/student/</url-pattern>
  </servlet-mapping>
  

</web-app>